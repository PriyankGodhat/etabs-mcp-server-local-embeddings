// tsconfig.json
{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext", // Essential for modern ES Modules in Node.js
      "moduleResolution": "NodeNext",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }